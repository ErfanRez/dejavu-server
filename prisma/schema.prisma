generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Property {
  id          String  @id @default(uuid())
  title       String
  size        Int
  location    String  @db.Text
  bedrooms    Int
  price       String
  imageUrl    String  @db.Text
  description String?

  creactedAt DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

