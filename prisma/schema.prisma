generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Property {
  id          String  @id @default(uuid())
  title       String
  size        Int
  location    String  @db.Text
  bedrooms    Int
  bathrooms   Int
  parkings    Int
  price       String
  images      Image[]
  description String?

  creactedAt DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Image {
  id         String   @id @default(uuid())
  url        String   @db.Text
  propertyId String
  property   Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)

  creadedAt DateTime @default(now())
  UpdatedAt DateTime @updatedAt

  @@index([propertyId])
}

